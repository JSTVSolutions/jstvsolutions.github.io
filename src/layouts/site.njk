<!doctype html>
<html lang="{{ page.lang }}">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>JSTV Solutions</title>
    <link href="/css/site.css" rel="stylesheet" />
    <script src="/js/alpine.min.js" defer></script>
    <link
      rel="alternate"
      type="application/atom+xml"
      href="/{{ page.lang }}/feed.xml"
    />
    <meta name="generator" content="{{ eleventy.generator }}" />
  </head>
  <body>
    <div class="bg-white" x-data="{ open: false }">
      <header class="absolute inset-x-0 top-0 z-50">
        <nav
          class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8"
          aria-label="Global"
        >
          <div class="flex lg:flex-1">
            <a class="-m-1.5 p-1.5" href="/{{ page.lang }}/">
              <span class="sr-only">JSTV Solutions</span>
              {%- include "logo-small.html" %}
            </a>
          </div>
          <div class="flex lg:hidden">
            <button
              class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700"
              type="button"
              @click="open = true"
            >
              <span class="sr-only">Open main menu</span>
              <svg
                class="size-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                aria-hidden="true"
                data-slot="icon"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
                />
              </svg>
            </button>
          </div>
          <div class="hidden lg:flex lg:gap-x-12">
            {%- for entry in collections.all | matchPageLang | eleventyNavigation %}
              <a
                class="text-sm/6 font-semibold text-gray-900"
                href="{{ entry.url }}"
                {% if entry.url == page.url %}aria-current="page"{% endif %}
                >{{ entry.title }}</a
              >
            {%- endfor %}
          </div>
          <div class="hidden lg:flex lg:flex-1 lg:justify-end">
            {%- for lang in i18n.langs %}
              {%- if page.lang != lang.code %}
                <a
                  class="text-sm/6 font-semibold text-gray-900"
                  href="/{{ lang.code }}/"
                  >{{ lang.name }}</a
                >
              {%- endif %}
            {%- endfor %}
          </div>
        </nav>
        <!-- Mobile menu, show/hide based on menu open state. -->
        <div class="lg:hidden" role="dialog" aria-modal="true" x-show="open">
          <!-- Background backdrop, show/hide based on slide-over state. -->
          <div class="fixed inset-0 z-50"></div>
          <div
            class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-white p-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10"
          >
            <div class="flex items-center justify-between">
              <a class="-m-1.5 p-1.5" href="#">
                <span class="sr-only">JSTV Solutions</span>
                {%- include "logo-small.html" %}
              </a>
              <button
                class="-m-2.5 rounded-md p-2.5 text-gray-700"
                type="button"
                @click="open = false"
              >
                <span class="sr-only">Close menu</span>
                <svg
                  class="size-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  aria-hidden="true"
                  data-slot="icon"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M6 18 18 6M6 6l12 12"
                  />
                </svg>
              </button>
            </div>
            <div class="mt-6 flow-root">
              <div class="-my-6 divide-y divide-gray-500/10">
                <div class="space-y-2 py-6">
                  {%- for entry in collections.all | matchPageLang | eleventyNavigation %}
                    <a
                      class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-gray-900 hover:bg-gray-50"
                      href="{{ entry.url }}"
                      {% if entry.url == page.url %}aria-current="page"{% endif %}
                      >{{ entry.title }}</a
                    >
                  {%- endfor %}
                </div>
                <div class="py-6">
                  {%- for lang in i18n.langs %}
                    {%- if page.lang != lang.code %}
                      <a
                        class="-mx-3 block rounded-lg px-3 py-2.5 text-base/7 font-semibold text-gray-900 hover:bg-gray-50"
                        href="/{{ lang.code }}/"
                        >{{ lang.name }}</a
                      >
                    {%- endif %}
                  {%- endfor %}
                </div>
              </div>
            </div>
          </div>
        </div>
      </header>

      {{ content | safe }}

      <footer class="mx-auto mt-32 max-w-7xl px-6 sm:mt-40 lg:px-8">
        <div class="x-border-t x-border-gray-900/10 pb-8 pt-20 sm:pt-24">
          <div
            class="mt-16 border-t border-gray-900/10 pt-8 sm:mt-20 md:flex md:items-center md:justify-between lg:mt-24"
          >
            <div class="flex gap-x-6 md:order-2">
              <a
                class="text-gray-600 hover:text-gray-800"
                target="_linkedin"
                href="https://linkedin.com/company/jstv-solutions/"
              >
                <span class="sr-only">LinkedIn</span>
                <svg
                  class="size-6"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                >
                  <path
                    clip-rule="evenodd"
                    fill-rule="evenodd"
